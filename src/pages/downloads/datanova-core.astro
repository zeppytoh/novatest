---
import BaseLayout from "@layout/BaseLayout.astro";
import Icon from "@ui/icons/Icon.astro";

// Hero
const preTitle = "Download";
const title = "Download a fully functional trial version of the DataNova Core";
const subTitle =
  "The DataNova Core comes in two editions: Essential and Advanced. Choose the one that fits your goals to unlock your data's full potential. Upgrading is simple when you're ready to grow.";

// Comparison Table Link
const compareLinkTitle = "Compare editions & features";
const compareLink = "editions";
const compareLinkAriaLabel =
  "Explore the detailed feature comparison of the Essential and Advanced Editions of DataNova Core.";

// Version options
const essentialTier = {
  title: "Essential Edition",
  description:
    "Unlock your data’s potential with robust analytics tools, including 30+ statistical models and 25+ visualization templates to turn insights into action.",
  cta: {
    text: "Download Essential",
    link: "#",
  },
};

const advancedTier = {
  title: "Advanced Edition",
  description:
    "Experience unparalleled AI-powered analytics with automated pattern recognition, anomaly detection, and advanced forecasting tools to stay ahead.",
  cta: {
    text: "Download Advanced",
    link: "#",
  },
};

// Small Info Section
const smallInfoSection = {
  intro: {
    text: "Try both editions free for 30 days — no commitment or personal info required.",
  },
  links: [
    {
      text: "View the end-user license agreement (EULA)",
      href: "#",
      ariaLabel: "View the end-user license agreement (EULA)",
    },
    {
      text: "Install / uninstall instructions",
      href: "editions",
      ariaLabel: "Install & uninstall instructions",
    },
  ],
};

// Large Info Section

const largeInfoSection = {
  olderReleases: {
    title: "Older Releases",
    content: "Access older versions of DataNova Core below:",
    versions: [
      {
        version: "5.x - Essential Edition",
        href: "#",
      },
      {
        version: "5.x - Advanced Edition",
        href: "#",
      },
      {
        version: "4.x - Essential Edition",
        href: "#",
      },
      {
        version: "4.x - Advanced Edition",
        href: "#",
      },
      {
        version: "3.x - Essential Edition",
        href: "#",
      },
      {
        version: "3.x - Advanced Edition",
        href: "#",
      },
    ],
  },
  systemRequirements: {
    title: "System Requirements",
    content:
      "Requires Windows 10/11 with Excel 2016, 2019, 2021, or Office 365 (32-bit, 64-bit, or Arm) or macOS 11 (Big Sur) or later.",
  },
  excel2003: {
    title: "Excel 2003",
    content:
      "Excel 2003 isn’t supported. Use version 3 links below for compatibility.",
    versions: [
      {
        version: "3.x - Essential Edition",
        href: "#",
      },
      {
        version: "3.x - Advanced Edition",
        href: "#",
      },
    ],
  },
};
---

<BaseLayout>
  <section class="mx-auto max-w-[85rem] px-4 pb-12 pt-40 sm:px-6 lg:px-8">
    <div class="max-w-7xl">
      <div class="mx-auto max-w-2xl lg:mx-0">
        <p class="text-base/7 font-medium text-slate-400">{preTitle}</p>
        <h1
          class="mt-1 text-balance text-4xl text-slate-800 sm:text-5xl md:text-6xl lg:text-7xl"
        >
          {title}
        </h1>
        <p
          class="mt-8 max-w-xl text-pretty text-lg font-medium text-slate-700 sm:text-xl/8"
        >
          {subTitle}
        </p>
        <a
          class="group mt-5 inline-flex items-center justify-center gap-x-2 text-center font-medium text-slate-700 shadow-lg shadow-transparent transition duration-300 hover:text-slate-400 focus:outline-hidden"
          href={compareLink}
          target="_blank"
          aria-label={compareLinkAriaLabel}
        >
          {compareLinkTitle}
          <Icon name="chevronRight" />
        </a>
      </div>
    </div>
  </section>

  <section
    class="mx-auto mt-16 grid max-w-lg grid-cols-1 items-center gap-y-6 px-4 sm:mt-20 md:px-0 lg:max-w-4xl lg:grid-cols-2 lg:gap-y-0"
  >
    <div
      class="rounded-3xl rounded-t-3xl bg-white/60 p-8 ring-1 ring-slate-900/10 sm:p-10 lg:rounded-b-none lg:rounded-bl-3xl lg:rounded-tr-none"
    >
      <h3 class="text-3xl font-semibold text-slate-600">
        {essentialTier.title}
      </h3>

      <p class="mt-8 text-base/6 text-slate-600 sm:mt-10">
        {essentialTier.description}
      </p>
      <a
        href={essentialTier.cta.link}
        aria-describedby={essentialTier.title}
        class="mt-8 block rounded-lg px-3.5 py-2.5 text-center text-sm font-semibold ring-1 ring-inset ring-teal-700 transition duration-300 hover:bg-teal-700/80 hover:text-white focus:bg-teal-700 focus:text-white focus:outline-hidden sm:mt-10"
        >{essentialTier.cta.text}</a
      >
    </div>

    <div
      class="relative flex flex-col justify-evenly rounded-3xl bg-teal-700 p-8 shadow-2xl ring-1 ring-teal-900/10 sm:p-10 lg:h-[120%]"
    >
      <h3 class="text-4xl/7 font-semibold text-teal-100">
        {advancedTier.title}
      </h3>

      <p class="mt-8 text-lg/6 text-teal-50 sm:mt-10">
        {advancedTier.description}
      </p>

      <a
        href={advancedTier.cta.link}
        aria-describedby={advancedTier.title}
        class="mt-8 block rounded-lg bg-teal-600 px-3.5 py-2.5 text-center text-sm font-semibold text-white shadow-xs transition-colors duration-300 hover:bg-teal-600/80 focus:bg-teal-600/80 focus:outline-hidden sm:mt-10"
        >{advancedTier.cta.text}</a
      >
    </div>
  </section>

  <section class="mx-auto max-w-[85rem] px-4 pb-16 pt-32 sm:px-6 lg:px-8">
    <div
      class="mx-auto grid grid-rows-1 content-center divide-y divide-dashed divide-slate-300 lg:mx-0 lg:grid-cols-2 lg:divide-x lg:divide-y-0"
    >
      <div class="py-5 sm:p-5">
        <p
          class="inline-flex gap-x-4 text-pretty font-medium text-slate-700 sm:text-lg/8"
        >
          <Icon name="info" class="size-8" />
          {smallInfoSection.intro.text}
        </p>
      </div>
      <div class="flex flex-col justify-evenly p-5">
        {
          smallInfoSection.links.map((link, index) => (
            <a
              class={`${index === 1 ? "mt-5" : ""} group inline-flex w-fit items-center gap-x-2 font-medium text-slate-700 transition duration-300 hover:text-slate-400 focus:outline-hidden`}
              href={link.href}
              download={index === 0 ? link.href.split("/").pop() : undefined}
              aria-label={link.ariaLabel}
            >
              {link.text}
              <Icon name="chevronRight" />
            </a>
          ))
        }
      </div>
    </div>
  </section>

  <section
    class="mx-auto max-w-[85rem] px-4 pb-10 sm:px-6 md:py-14 lg:px-8 lg:py-20"
  >
    <div
      class="grid rounded-3xl bg-teal-300 px-5 py-5 shadow-xl md:grid-cols-2 md:grid-rows-2"
    >
      <div class="py-5 sm:p-5 md:row-span-2 md:content-center">
        <h3
          class="text-balance text-2xl font-bold tracking-tight text-slate-800"
        >
          {largeInfoSection.olderReleases.title}
        </h3>

        <p class="mt-6 text-pretty text-lg/8 text-slate-700">
          {largeInfoSection.olderReleases.content}
        </p>

        <ul class="mt-6 list-inside list-none px-5 text-slate-700">
          {
            largeInfoSection.olderReleases.versions.map((release, index) => (
              <li class={`${index % 2 === 1 ? "mb-6" : ""}`}>
                <a
                  href={release.href}
                  class="transition duration-300 hover:text-slate-400 hover:underline"
                >
                  {release.version}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <div
        class="border-t border-dashed border-slate-400 py-5 sm:p-5 md:content-center md:border-l md:border-t-0"
      >
        <h3
          class="text-balance text-2xl font-bold tracking-tight text-slate-800"
        >
          {largeInfoSection.systemRequirements.title}
        </h3>
        <p class="mt-6 text-pretty text-lg/8 text-slate-700">
          {largeInfoSection.systemRequirements.content}
        </p>
      </div>
      <div
        class="border-t border-dashed border-slate-400 py-5 sm:p-5 md:col-start-2 md:row-start-2 md:content-center md:border-l"
      >
        <h3
          class="text-balance text-2xl font-bold tracking-tight text-slate-800"
        >
          {largeInfoSection.excel2003.title}
        </h3>

        <p class="mt-6 text-pretty text-lg/8 text-slate-700">
          {largeInfoSection.excel2003.content}
        </p>

        <ul class="mt-6 list-inside list-none px-5 text-slate-700">
          {
            largeInfoSection.excel2003.versions.map((version) => (
              <li>
                <a
                  href={version.href}
                  class="transition duration-300 hover:text-slate-400 hover:underline"
                >
                  {version.version}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </section>

  <style>
    .svgBlock::after {
      content: "";
      position: absolute;
      inset: 0;
      background-image: url(/guilloche.svg);
      background-repeat: repeat;
      background-position: right top;
      background-size: 20px, 20px;
      opacity: 0.075;
      background-clip: padding-box;
      mask-image: linear-gradient(270deg, rgb(0, 0, 0), rgba(0, 0, 0, 0));
    }
  </style>
</BaseLayout>
