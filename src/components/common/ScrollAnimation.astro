<script>
  document.addEventListener('DOMContentLoaded', async () => {
    // Dynamically import skrollr to avoid SSR issues
    const skrollr = await import('skrollr').then(module => module.default);
    
    // Initialize skrollr
    const s = skrollr.init({
      forceHeight: false,
      smoothScrolling: true
    });
    
    // Refresh skrollr after all images have loaded
    window.addEventListener('load', () => {
      s.refresh();
    });
  });
</script>